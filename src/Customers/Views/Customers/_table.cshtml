@model IEnumerable<Customers.Models.Customer>



<a id="customers_table_input" href="#customers_table"></a>

    @if (Model.Count() == 0)
    {
        <div>Нет данных для отображения</div>

    }
    else {
        <table id="customers_table" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>

                        <td style="display:none;">@e.CustomerId</td>
                        <td>@e.CustomerName</td>
                        <td>@e.BusinessType.BusinessTypeName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
        
 <script>
      @*Выделим первую строку*@
      $('#customers_table > tbody > tr').first().addClass('highlight');
</script>


