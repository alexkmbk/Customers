@model IEnumerable<Customers.Models.Bank>

<h1>@Html.ViewData["Title"]</h1>

@*Загрузка файла со списком банков*@

@using (Html.BeginForm("UploadBanks", "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tr>
            <td>Путь к файлу с банками:</td>
            <td><input type="file" name="files" /></td>
            <td><input type="submit" name="Submit" id="Submit" value="Загрузить банки" /></td>
</tr>
    </table>
}


@if (Model.Count() == 0)
{
    <div>Нет данных для отображения</div>

}
else {
    <a href="#banks_table" id="banks_table_input"></a>
    <table id="banks_table" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>БИК</th>
                <th>Наименование</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
                {
                <tr>
                    <td>@e.BIC</td>
                    <td>@e.BankName</td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    var banks_table = new Table("banks_table", false);
</script>